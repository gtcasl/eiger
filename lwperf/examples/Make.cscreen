# Makefile for mpicxx compiler

SHELL = /bin/sh
#.IGNORE:

OBJ1 = $(SRC:.cpp=.o)
OBJ2 = $(OBJ1:.c=.o)
OBJ = $(OBJ2:.F90=.o)

# load in eiger bits
# intel, gcc
TOOLS=gcc
include Makefile.mpieiger

# System-specific settings and -g/-O opts
DEB=-g

CC =		mpicc.openmpi
#CXX =		mpicxx.openmpi
FC = 		mpif90.openmpi
CCFLAGS =	$(DEB) -DMPICH_IGNORE_CXX_SEEK -D_USE_EIGER -D_LWPERF_SCREEN
LINK =		mpicc.openmpi
LINKFLAGS =	$(DEB)
#USRLIB =	-lmpi_cxx -Wl,-rpath,$(HOME)/mpi/intel/lib
USRLIB =	-lmpi_cxx -lstdc++
ifeq ($(USER),baallan)
SYSLIB =	/home/baallan/sst/gatech/eiger-svn/api/gcc/libeigerInterface.a /usr/lib/libmysqlpp.a -lmysqlclient
else
SYSLIB = /home/eric/eiger/trunk/api/gcc/libeigerInterface.a /usr/lib/libmysqlpp.a -lmysqlclient
#$(error need a syslib)
endif
SIZE =		size

# Link rule

$(EXE):	$(OBJ)
	$(LINK) $(LINKFLAGS) $(OBJ) $(USRLIB) $(SYSLIB) -o $(EXE)
	$(SIZE) $(EXE)

# Compilation rules
.SUFFIXES:
.SUFFIXES: .cpp .cxx .c .h .F90 .o

.c.o:
	$(CC) $(CCFLAGS) -c $(CXXFLAGS) $<

.cpp.o:
	$(CXX) $(CCFLAGS) -c $(CXXFLAGS) $<

.F90.o:
	$(FC) $(FCFLAGS) -c $(CXXFLAGS) $<

# Individual dependencies

$(OBJ): $(INC)
